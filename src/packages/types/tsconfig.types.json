    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "tsBuildInfoFile": "tsconfig.types.tsbuildinfo",
  },
  "include": [
    "src"
  ]
